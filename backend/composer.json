{
    "name": "workana/hiring_challenge",
    "description": "Workana Dev Challenge",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4.3"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
